set ssl_force_tls = yes
set imap_keepalive = 900
set move = no

# accounts
folder-hook "account.com.gmail.home" "source ~/.mutt/account.com.gmail.home"
folder-hook "account.com.gmail.work" "source ~/.mutt/account.com.gmail.work"

macro index gh "<sync-mailbox><enter-command>source ~/.mutt/account.com.gmail.home<enter><change-folder>!<enter>"
macro index gw "<sync-mailbox><enter-command>source ~/.mutt/account.com.gmail.work<enter><change-folder>!<enter>"

set my_default_account = `echo ${MUTT_ACCOUNT:-home}`
source ~/.mutt/account.com.gmail.$my_default_account

# options
set sort = threads
set sort_aux = reverse-last-date
set index_format = "%4C %Z %{%b %d} %-22.22L %s"
set header_color_partial = yes
set confirmappend = no
set history_file = ~/.mutt/mutthistory
set history = 100
set save_history = 100

# appearance
color indicator  brightcolor222 color234
color status     color242       default
color hdrdefault color248       default
color header     color222       default '^[[:alpha:]]+:'
color index      color244       default ~R
color index      color252       default ~U
color index      color236       default ~D
color tree       color244       default

# keybindings
bind  index,pager  E  edit
bind  index        G  imap-fetch-mail
macro index,pager  z  "<save-message>=[Gmail]/All <enter><enter-command>echo 'Conversation archived.'<enter>"
bind  editor      \Cp history-up
bind  editor      \Cn history-down
